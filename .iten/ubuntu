\e[1;31m| | | |\e[1;30m |__ \e[1;31m _   _\e[1;30m _ __ | |\e[1;31m_\e[1;30m _   _
| | | | `_ \\\e[1;31m| | | |\e[1;30m `_ \\\e[1;31m| __|\e[1;30m | | |
| |_| | |_) \e[1;31m| |_| |\e[1;30m | |\e[1;31m | |_\e[1;30m| |_| |
\e[1;31m \___/\e[1;30m|_.__/\e[1;31m\___,_|\e[1;30m_| |_|\e[1;31m\__|\e[1;30m\__,_|'
