echo -e '\e[1;31m [ 99 ] para volver atras '
echo ' '
echo -e "\e[1;30m"
read -p "Ubuntu_Chico-termux #~ : " o
if [ $o = "1" ]
then
cd $HOME
git clone https://github.com/chicotermux/ubuntu-Chico_termux
clear
setterm -foreground red
echo ' Descarga Finalizada '
elif [ $o = "99" ]
then
source $PREFIX/bin/pack-tool
else
setterm -foreground red
echo " opción incorrecta ,verifique respuesta"
sleep 2
clear
source $PREFIX/tools/pack-Tool/.iten/ubuntu
fi
